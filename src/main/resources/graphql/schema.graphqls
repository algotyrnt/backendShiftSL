type User {
  id: ID!
  firstName: String
  lastName: String
  slmcReg: String
  firebaseUid: String!
  phoneNo: String
  email: String
  role: Role!
}

type Ward {
    id: ID!
    name: String
    wardAdmin: User!
}

enum Role {
  HR_ADMIN
  WARD_ADMIN
  DOCTOR_PERM
  DOCTOR_TEMP
}

type Query {
    users: [User]
    userByID(id: ID!): User
    userByRole(role: Role!): [User]
}